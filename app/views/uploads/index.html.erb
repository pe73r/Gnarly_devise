
<div class="row m-3">
   <div class="pcol-md-6">
      <h3>This are all my uploads</h3>
       <button class="btn btn-primary btn-upload">
        <%= link_to 'New Upload', new_upload_path %>
      </button>
  </div>
</div>
<div class="row p-5">
    <% @uploads.each do |upload| %>
       <div class="col-md-4">
        <div class="thumbnail shadow p-3">
             <img src="<%= upload.photoupload %>" alt="<%= upload.title %>" class="upload_img">
             <div class="pd-3 ">
               <h3><%= upload.title %></h3>
               <p><%= upload.description %></p>
               <p><%= upload.created_at.strftime("%b %d, %Y") %></p>
               <h4><%= upload.is_public %></h4>
               <h4><%= upload.user %></h4>
             </div>
        <button class="btn btn-primary btn-upload"><%= link_to 'Show', upload %></button>
        <button class="btn btn-warning btn-upload"><%= link_to 'Edit', edit_upload_path(upload) %></button>
        <button class="btn btn-danger btn-upload"><%= link_to 'Destroy', upload, method: :delete, data: { confirm: 'Are you sure?' } %></button>
           </tr>
        </div>
      </div>
    <% end %>

</div>
<br>
