<div class="row">
<div class="col-md-6 bg-white rounded mt-5 p-5">

<h2>This is upload show</h2>
     <div class="">
        <img src="<%= @upload.photoupload %>" alt="<%= @upload.title %>" class="upload_img">
    </div>
</div>
<div class="col-md-6 bg-white rounded mt-5 p-5">
<h2><%= @upload.title %></h2>
<p>Published by <strong><%= @upload.user.name %></strong><strong><%= @upload.user.last_name %> </strong> <%= time_ago_in_words(@upload.created_at) %></p>
<p>
  <strong>Description:</strong>
  <%= @upload.description %>
</p>

<p>
  <strong>Is public:</strong>
  <%= @upload.is_public %>
</p>

<p>
  <strong>User:</strong>
  <%= @upload.user %>
</p>
<p>
  <strong>Tags</strong>
  <%= render @upload.tags %>
</p>


<%= link_to 'Edit', edit_upload_path(@upload) %> |
<%= link_to 'Back', uploads_path %>
</div>
</div>
