
<%= simple_form_for(@upload) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :is_public %>
  </div>
   <div class="form-inputs">
    <h5>Write the tags of the activity</h5>
    <p>(separated by comas)</p>
    <%= f.text_field :tag_list, value: f.object.tag_list.to_s, class: "form-control input-lg" %>

  </div>
  <div class="form-inputs">
    <%= f.input :photoupload %>

  </div>

  <div class="form-actions btn text-white btn-signup">
    <%= f.button :submit %>
  </div>
<% end %>

